<Window x:Class="Testovoe.View.StartAppWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Testovoe.View"
        mc:Ignorable="d"
        Title="StartAppWin" Height="470" Width="350" ResizeMode="CanResize">
    <Grid>
        <StackPanel>
            <StackPanel DataContext="{Binding ConModel}" >
                <StackPanel Margin="10">
                    <Label Content="Host"/>
                    <TextBox Text="{Binding Host, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <Label Content="Port"/>
                    <TextBox Text="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <Label Content="DataBase"/>
                    <TextBox Text="{Binding DataBase, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <Label Content="Username"/>
                    <TextBox Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }"/>
                </StackPanel>
                <StackPanel Margin="10" >
                    <Label Content="Password"/>
                    <TextBox Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }"/>
                </StackPanel>
                
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Command="{Binding SaveCommand}" Margin="10" Width="120" Height="25" Content="Сохранить"/>
                <Button Command="{Binding ContinueCommand}" Margin="10" Width="120" Height="25" Content="Продолжить"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
